# ====================================
# Backend Environment Variables
# ====================================

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Logging
LOG_LEVEL=debug
LOG_PRETTY=true

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=60000

# AWS Region
AWS_REGION=ap-northeast-1

# Database (if needed)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=myapp
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_SSL=false

# Redis (if needed)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Authentication (if using Cognito)
# COGNITO_USER_POOL_ID=
# COGNITO_CLIENT_ID=
# COGNITO_REGION=ap-northeast-1

# External APIs
# EXTERNAL_API_KEY=
# EXTERNAL_API_URL=

# Monitoring
# SENTRY_DSN=
# ENABLE_XRAY=false
